<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.insky.finalproject.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력한 수면 시간 : "
        android:textSize="10pt"
        android:id="@+id/sleeptime"/>
    <TextView
        android:id="@+id/sleepValue"
        android:layout_toEndOf="@+id/sleeptime"
        android:layout_width="10pt"
        android:layout_height="10pt" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counttime"
        android:layout_toEndOf="@id/sleeptime"
        android:text="입력한 보호시간 : "
        android:textSize="10pt"
        android:layout_below="@+id/sleeptime"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/countValue"
        android:layout_width="10pt"
        android:layout_height="10pt"
        android:layout_below="@+id/sleeptime"
        android:layout_toEndOf="@+id/counttime" />

    <TextView
        android:layout_below="@id/counttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보호자 : "
        android:textSize="10pt"
        android:id="@+id/saver"/>
    <TextView
        android:layout_below="@+id/counttime"
        android:id="@+id/inputSaver"
        android:layout_toEndOf="@+id/saver"
        android:layout_width="10pt"
        android:layout_height="10pt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자정보입력"
        android:onClick="onClick"
        android:id="@+id/userinfo"
        android:layout_alignBaseline="@+id/saverinfo"
        android:layout_alignBottom="@+id/saverinfo"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보호자정보입력"
        android:onClick="onClick"
        android:id="@+id/saverinfo"
        android:layout_below="@+id/saver"
        android:layout_toEndOf="@+id/counttime"
        android:layout_marginTop="25dp" />




</RelativeLayout>
